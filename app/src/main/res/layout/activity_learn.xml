<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_grey"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        >

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarInclude" />

        <TextView
            android:layout_width="296dp"
            android:layout_height="56dp"
            android:layout_marginTop="110dp"
            android:id="@+id/learn_text"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/dark_blue_grey"
            android:lineSpacingExtra="3sp"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="276dp"
            android:layout_marginLeft="24dp"
            android:background="#ffffff"
            android:layout_marginRight="22dp"
            android:orientation="vertical"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="106dp"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:id="@+id/learn_cancel"
                android:textColor="@color/dark_blue_grey"
                android:background="#e8e8e8"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:text="뒤로가기"
                />

            <Button
                android:layout_width="196dp"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:id="@+id/learn_start"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:background="@color/dark_green_blue"
                android:textColor="@color/white"
                android:text="학습 시작하기"
                />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/design_navigation_view"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/slider_menu"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>