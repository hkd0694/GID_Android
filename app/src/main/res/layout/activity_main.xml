<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_grey"
        android:orientation="vertical"
        >

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/main_toolbar" />


            <TextView
                android:id="@+id/text_area"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                android:lineSpacingExtra="3sp"
                android:textSize="18sp"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_radius"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/dark_green_blue"
                android:text="기원과 형성"
                android:id="@+id/origin_formation"
                />

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:textSize="16sp"
                android:background="@drawable/button_radius"
                android:layout_marginRight="46dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/dark_green_blue"
                android:text="삼국시대"
                android:id="@+id/ancient_society"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_radius"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/dark_green_blue"
                android:text="고려시대"
                android:id="@+id/goryeo_dynasty"
                />

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:layout_marginRight="46dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:background="@drawable/button_radius"
                android:textColor="@color/dark_green_blue"
                android:text="조선전기"
                android:id="@+id/joseon_before"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_radius"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/dark_green_blue"
                android:text="조선후기"
                android:id="@+id/joseon_after"
                />

            <Button
                android:layout_width="141dp"
                android:layout_height="69dp"
                android:layout_marginRight="46dp"
                android:background="@drawable/button_radius"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/dark_green_blue"
                android:text="근대개화"
                android:id="@+id/modern"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical">

        <Button
            android:layout_width="322dp"
            android:layout_height="69dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/button_radius"
            android:text="일제 강점기~현대"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/dark_green_blue"
            android:id="@+id/occupation_period"
            />

    </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/android"
                />
            
        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/main_navigation"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
