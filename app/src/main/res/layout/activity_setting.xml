<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_grey"
        android:orientation="vertical"
        >

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/setting_toolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_text"
                android:textSize="18sp"
                android:text="앱 상단에 시험 일정을 기록해 두세요"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                android:lineSpacingExtra="3sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <Spinner
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginRight="6dp"
            android:entries="@array/year"
            android:textAlignment="center"
            android:id="@+id/setting_year"
            >

        </Spinner>

            <TextView
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:text="년"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginRight="13dp"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                />

            <Spinner
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_marginRight="6dp"
                android:textAlignment="center"
                android:entries="@array/month"
                android:id="@+id/setting_month"
                >

            </Spinner>

            <TextView
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:text="월"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginRight="13dp"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                />

            <Spinner
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_marginRight="6dp"
                android:textAlignment="center"
                android:background="@drawable/spinner_background"
                android:id="@+id/setting_day"
                >

            </Spinner>

            <TextView
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:text="일"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginRight="13dp"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:id="@+id/setting_button"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:text="확인"
                android:background="@drawable/button_radius_green"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:scaleType="centerCrop"
                android:src="@drawable/android"
                />

        </LinearLayout>


    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/setting_navigation"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/slider_menu"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>