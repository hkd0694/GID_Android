<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pro_drawlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_grey"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="366dp"
                android:layout_height="21dp"
                android:id="@+id/pro_text"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="99dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/dark_blue_grey"
                />

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="260dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="17.3dp"
                android:layout_marginRight="18.7dp"
                android:padding="9dp"
                android:background="@drawable/button_radius"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/pro_no"
                        android:text="17"
                        android:textSize="19.2sp"
                        android:layout_marginRight="300dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_blue_grey"
                        />
                    
                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/star_normal_darkblue"
                        android:id="@+id/pro_script"
                        />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pro_content"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue_grey"
                        android:lineSpacingExtra="3.2sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pro_radiogroup"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                >

                <RadioButton
                    android:layout_width="379dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_grey"
                    android:id="@+id/pro_radio1"
                    android:background="@drawable/button_radius"
                    />

                <RadioButton
                    android:layout_width="379dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_grey"
                    android:id="@+id/pro_radio2"
                    android:background="@drawable/button_radius"
                    />

                <RadioButton
                    android:layout_width="379dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_grey"
                    android:id="@+id/pro_radio3"
                    android:background="@drawable/button_radius"
                    />

                <RadioButton
                    android:layout_width="379dp"
                    android:layout_height="29dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_grey"
                    android:id="@+id/pro_radio4"
                    android:background="@drawable/button_radius"
                    />

                <RadioButton
                    android:layout_width="379dp"
                    android:layout_height="29dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue_grey"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/pro_radio5"
                    android:background="@drawable/button_radius"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                >

                <Button
                    android:layout_width="137dp"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:text="정답 확인하기"
                    android:background="@drawable/button_radius_green"
                    android:id="@+id/pro_answer"
                    />
                
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/pro_toolbar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="bottom"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:scaleType="centerCrop"
            android:src="@drawable/android"
            />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/pro_navigation"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/slider_menu"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>